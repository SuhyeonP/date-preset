{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "declaration": true,
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "Node",
    "sourceMap": true,
    "isolatedModules": true,
    "allowJs": false,
    "noEmit": true
  },
  "include": ["./src/**/*"],
  "exclude": ["./src/__test__"]
}
